# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# For production, use your Cloud Run backend URL:
# NEXT_PUBLIC_API_URL=https://imensiah-backend-xxxxx-uc.a.run.app/api/v1
# For development:
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# WebSocket URL (if using real-time features)
NEXT_PUBLIC_WS_URL=wss://imensiah-backend-xxxxx-uc.a.run.app

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================
# For production, use live key (pk_live_...)
# For development/testing, use test key (pk_test_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# For production, use your Vercel deployment URL
# NEXT_PUBLIC_APP_URL=https://imensiah.vercel.app
# For development:
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=IMENSIAH

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_CHAT=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true to enable debug mode
NEXT_PUBLIC_DEBUG=false

# Set to true to show development tools in UI
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# =============================================================================
# FRONTEND TEST MODE (MOCK AUTH + DATA)
# =============================================================================
# When true, the UI uses mocked auth and API data so you can
# navigate all pages without real backend/auth. Do NOT enable in prod.
NEXT_PUBLIC_TEST_MODE=false
# Default role for test mode: user | admin
NEXT_PUBLIC_TEST_ROLE=user
