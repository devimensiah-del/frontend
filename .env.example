# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# Copy this file to .env.local and fill in your values
# =============================================================================

# =============================================================================
# API CONFIGURATION
# =============================================================================
# For production, use your Cloud Run backend URL:
# NEXT_PUBLIC_API_URL=https://imensiah-backend-xxxxx-uc.a.run.app/api/v1
# For development:
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# WebSocket URL (if using real-time features)
NEXT_PUBLIC_WS_URL=wss://imensiah-backend-xxxxx-uc.a.run.app

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# For production, use your Vercel deployment URL
# NEXT_PUBLIC_APP_URL=https://imensiah.vercel.app
# For development:
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=IMENSIAH

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-analytics-id

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true to enable debug mode
NEXT_PUBLIC_DEBUG=false

# Set to true to show development tools in UI
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# =============================================================================
# FRONTEND TEST MODE (MOCK AUTH + DATA)
# =============================================================================
# When true, the UI uses mocked auth and API data so you can
# navigate all pages without real backend/auth. Do NOT enable in prod.
NEXT_PUBLIC_TEST_MODE=false
# Default role for test mode: user | admin
NEXT_PUBLIC_TEST_ROLE=admin
